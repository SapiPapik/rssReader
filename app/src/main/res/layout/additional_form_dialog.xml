<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_news_title">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_news_title">

        <EditText
            android:id="@+id/etNameResource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_resource"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_news_title">

        <EditText
            android:id="@+id/etLinkResource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/link_resource"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>