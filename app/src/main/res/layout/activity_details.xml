<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDetailsNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_news_title" />

            <TextView
                android:id="@+id/tvDetailsNewsPubDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_news_title"
                android:layout_marginLeft="@dimen/margin_news_title"
                android:layout_marginRight="@dimen/margin_news_title" />

            <TextView
                android:id="@+id/tvDetailsNewsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_news_title"
                android:layout_marginLeft="@dimen/margin_news_title"
                android:layout_marginRight="@dimen/margin_news_title" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnOpenInBrowser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/open_in_browser" />
</LinearLayout>